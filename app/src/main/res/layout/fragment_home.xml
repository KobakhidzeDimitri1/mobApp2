<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <EditText
        android:id="@+id/homeFirstNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Name" />
    <EditText
        android:id="@+id/homeLastNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Last Name" />
    <EditText
        android:id="@+id/homeGpaEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="GPA" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sendDataToProfileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="send to profile"
        android:backgroundTint="@color/teal_200"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/moveToListButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="move to list"
        android:backgroundTint="@color/teal_200"/>

</LinearLayout>